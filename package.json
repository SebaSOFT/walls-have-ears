{
  "name": "walls-have-ears",
  "version": "3.13.2",
  "description": "A simple-as-possible module to muffle sounds that are behind a wall for a player.",
  "source": [
    "src/index.ts",
    "!src/**/*.test.ts"
  ],
  "main": "dist/main.js",
  "types": "dist/types.d.ts",
  "type": "module",
  "scripts": {
    "build": "parcel build",
    "build:analyze": "parcel build --reporter @parcel/reporter-bundle-analyzer",
    "dev": "parcel watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint --config eslint.config.js src/**/*.ts",
    "lint:fix": "eslint --config eslint.config.js src/**/*.ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://SebaSOFT@github.com/SebaSOFT/walls-have-ears.git"
  },
  "keywords": [
    "foundryvtt",
    "foundry",
    "module",
    "audio"
  ],
  "author": "SebaSOFT (sebasoft@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebaSOFT/walls-have-ears/issues"
  },
  "homepage": "https://github.com/SebaSOFT/walls-have-ears#readme",
  "devDependencies": {
    "@parcel/packager-ts": "2.15.4",
    "@parcel/reporter-bundle-analyzer": "^2.15.4",
    "@parcel/transformer-typescript-tsc": "^2.15.4",
    "@parcel/transformer-typescript-types": "2.15.4",
    "@types/jest": "^30.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
    "globals": "^16.3.0",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "parcel": "^2.15.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "packageManager": "yarn@4.9.2"
}
